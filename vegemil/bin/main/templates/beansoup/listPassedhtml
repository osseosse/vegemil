<script>
	$(document).ready(function() {
		$('#btnSearch').click(function() {
			var word = $('#txtSearch').val();
			if (word == "" || word == null) {
				alert("검색어를 입력하세요.");
				return false;
			}
		});

		function onKeydownEnterKey(obj) {
			if (event.keycode == 13) {
				self.focus();
				obj.click();

				return false;
			}
		}


	});

	function selectCategory() {
		$('#originList').show();
		$('#searchList').hide();
		$('#searchTotal').hide();
		$('#resultWord').hide();
	}
</script>
<script th:inline="javascript">
	/*<![CDATA[*/
